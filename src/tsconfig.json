{
    "compilerOptions": {
        "allowSyntheticDefaultImports": true,
        "baseUrl": ".",
        "experimentalDecorators": true,
        "lib": ["es2016", "dom"],
        "module": "commonjs",
        "moduleResolution": "node",
        "outDir": "../client-dist/",
        "noImplicitAny": true,
        "suppressImplicitAnyIndexErrors": true,
        "paths": {
          "*": [
            "*",
            "app/*",
            "util/*"
          ]
        },
        "skipLibCheck": true,
        "sourceMap": true,
        "strictNullChecks": true,
        "target": "es5",
        "typeRoots": [
          "../node_modules/@types/"
        ]
    },
    "exclude": [
      "../node_modules"
    ]
}
