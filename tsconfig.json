{
    "compilerOptions": {
        "allowSyntheticDefaultImports": true,
        "baseUrl": "./src",
        "experimentalDecorators": true,
        "lib": ["es2015", "dom"],
        "jsx": "react",
        "jsxFactory": "html",
        "module": "commonjs",
        "moduleResolution": "node",
        "outDir": "./dist/",
        "noImplicitAny": true,
        "suppressImplicitAnyIndexErrors": true,
        "paths": {
          "*": [
            "*",
            "app/*"
          ]
        },
        "skipLibCheck": true,
        "sourceMap": true,
        "strictNullChecks": true,
        "target": "es5",
        "typeRoots": [
          "./node_modules/@types/"
        ]
    },
    "include": [
      "./src/**/*"
    ],
    "exclude": [
      "node_modules"
    ]
}
